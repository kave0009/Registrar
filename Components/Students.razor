@page "/"
@using Registrar.Data
@using Registrar.Models

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Students</h3>
        <NavLink class="btn btn-primary" href="new-student">+</NavLink>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Helper.GetStudents())
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Type</td>
                    <td>
                        <NavLink class="btn btn-link" href=@($"register/{student.Id}")>Register</NavLink>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
